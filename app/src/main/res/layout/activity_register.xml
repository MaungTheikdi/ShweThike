<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:paddingVertical="10dp"
    android:paddingHorizontal="25dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <LinearLayout
        android:id="@+id/linear_layout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/login_status_text"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_logo"
        android:src="@drawable/gas_cylinder"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="150dp"
        android:layout_height="170dp"/>


    <TextView
        android:id="@+id/label_name"
        android:text="Name"
        android:layout_marginTop="18dp"
        android:paddingHorizontal="@dimen/text_padding"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        android:textAlignment="viewStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_6"
        style="@style/GreenTextInputLayout"
        app:boxBackgroundMode="outline"
        app:layout_constraintTop_toBottomOf="@+id/label_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/user_name"
            android:hint="Name"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/label_ic"
        android:text="Password"
        android:paddingHorizontal="@dimen/text_padding"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_6"
        android:textAlignment="viewStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_1"
        style="@style/GreenTextInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/label_ic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:hint="Password"
            android:inputType="textPhonetic"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>



    <Button
        android:id="@+id/btn_register"
        android:text="Register"
        android:textColor="@color/black"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="10dp"
        android:text="Already have an account? Login Here!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_register"
        android:textSize="12sp"
        />


    <ProgressBar
        android:id="@+id/progress_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="#FDFDFC"
        android:indeterminateTint="#2196F3"
        android:indeterminate="true"
        android:max="100"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>