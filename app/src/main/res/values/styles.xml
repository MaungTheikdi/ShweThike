<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="Widget.Theme.Theikdi.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Theikdi.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!-- Custom BottomSheetDialog style -->
    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <!-- Custom BottomSheet style -->
    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:backgroundTint">#FFEEEE</item> <!-- Set your desired color -->
    </style>

</resources>